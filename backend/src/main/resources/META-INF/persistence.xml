<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <!-- Persistence unit configuration goes here -->
    <persistence-unit name="feeding-session-unit">
        <class>gr.athtech.backend.model.Account</class>
        <class>gr.athtech.backend.model.FeedingSession</class>

        <!-- Additional configuration settings -->

        <properties>
            <!-- Database connection settings -->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/BabyFeedingMonitor"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="password"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
<!--            <property name="javax.persistence.schema-generation.database.action" value=""/>-->
        </properties>

    </persistence-unit>
</persistence>



